{% extends 'layouts/app.html.twig' %}

{% block title %}Dashboard{% endblock %}
{% block page_title %}Dashboard{% endblock %}

{% block content %}
{# Stats cards #}
<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4 mb-8">
    {% for stat in stats %}
    <twig:Card>
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-text-muted">{{ stat.label }}</p>
                <p class="text-2xl font-bold text-text-primary mt-1">{{ stat.value }}</p>
            </div>
            <span class="text-sm font-medium {{ stat.trend == 'up' ? 'text-success-600' : 'text-danger-600' }}">
                {{ stat.change }}
                {% if stat.trend == 'up' %}
                    <svg class="w-4 h-4 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 15l7-7 7 7"/></svg>
                {% else %}
                    <svg class="w-4 h-4 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M19 9l-7 7-7-7"/></svg>
                {% endif %}
            </span>
        </div>
    </twig:Card>
    {% endfor %}
</div>

{# Recent items table #}
<twig:Card title="Recent orders">
    <twig:Table>
        <thead>
            <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-text-muted uppercase tracking-wider">Order</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-text-muted uppercase tracking-wider">Status</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-text-muted uppercase tracking-wider">Date</th>
                <th class="px-4 py-3 text-right text-xs font-medium text-text-muted uppercase tracking-wider">Amount</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-border">
            {% for item in recentItems %}
            <tr class="hover:bg-surface-hover transition-colors">
                <td class="px-4 py-3 text-sm font-medium text-text-primary">{{ item.name }}</td>
                <td class="px-4 py-3"><twig:Badge variant="{{ item.status }}">{{ item.statusLabel }}</twig:Badge></td>
                <td class="px-4 py-3 text-sm text-text-secondary">{{ item.date }}</td>
                <td class="px-4 py-3 text-sm text-text-primary text-right">{{ item.amount }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </twig:Table>
</twig:Card>
{% endblock %}
