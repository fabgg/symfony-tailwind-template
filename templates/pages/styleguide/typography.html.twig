{% extends 'layouts/app.html.twig' %}

{% block title %}Styleguide — Typography{% endblock %}
{% block page_title %}Typography{% endblock %}

{% block content %}
<div class="space-y-12">

    {# Headings #}
    <section>
        <h2 class="text-lg font-semibold text-text-primary mb-4 pb-2 border-b border-border">Headings</h2>
        <div class="space-y-4">
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-20 shrink-0">H1 / 3xl</span>
                <twig:Heading :level="1">Heading 1 — The quick brown fox</twig:Heading>
            </div>
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-20 shrink-0">H2 / 2xl</span>
                <twig:Heading :level="2">Heading 2 — The quick brown fox</twig:Heading>
            </div>
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-20 shrink-0">H3 / xl</span>
                <twig:Heading :level="3">Heading 3 — The quick brown fox</twig:Heading>
            </div>
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-20 shrink-0">H4 / lg</span>
                <twig:Heading :level="4">Heading 4 — The quick brown fox</twig:Heading>
            </div>
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-20 shrink-0">H5 / base</span>
                <twig:Heading :level="5">Heading 5 — The quick brown fox</twig:Heading>
            </div>
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-20 shrink-0">H6 / sm</span>
                <twig:Heading :level="6">Heading 6 — The quick brown fox</twig:Heading>
            </div>
        </div>

        <div class="mt-3">
            <details class="text-sm">
                <summary class="cursor-pointer text-text-muted hover:text-text-secondary">Code Twig</summary>
                <pre class="mt-2 p-4 bg-surface-alt rounded-lg text-xs overflow-x-auto"><code>&lt;twig:Heading :level="1"&gt;Title&lt;/twig:Heading&gt;
&lt;twig:Heading :level="2"&gt;Subtitle&lt;/twig:Heading&gt;
&lt;twig:Heading :level="3"&gt;Section title&lt;/twig:Heading&gt;

{# With extra classes #}
&lt;twig:Heading :level="2" class="mb-4"&gt;With margin&lt;/twig:Heading&gt;</code></pre>
            </details>
        </div>
    </section>

    {# Text #}
    <section>
        <h2 class="text-lg font-semibold text-text-primary mb-4 pb-2 border-b border-border">Text</h2>

        <h3 class="text-sm font-medium text-text-muted mb-3">Color variants</h3>
        <div class="space-y-3 mb-6">
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-28 shrink-0">primary</span>
                <twig:Text>Primary text — used for important content</twig:Text>
            </div>
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-28 shrink-0">secondary</span>
                <twig:Text variant="secondary">Secondary text — descriptions, subtitles</twig:Text>
            </div>
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-28 shrink-0">muted</span>
                <twig:Text variant="muted">Muted text — metadata, placeholders</twig:Text>
            </div>
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-28 shrink-0">accent</span>
                <twig:Text variant="accent">Accent text — links, primary actions</twig:Text>
            </div>
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-28 shrink-0">success</span>
                <twig:Text variant="success">Success text — confirmations, validations</twig:Text>
            </div>
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-28 shrink-0">warning</span>
                <twig:Text variant="warning">Warning text — alerts</twig:Text>
            </div>
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-28 shrink-0">danger</span>
                <twig:Text variant="danger">Danger text — errors, deletions</twig:Text>
            </div>
        </div>

        <h3 class="text-sm font-medium text-text-muted mb-3">Sizes</h3>
        <div class="space-y-3">
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-28 shrink-0">xs (12px)</span>
                <twig:Text size="xs">The quick brown fox jumps over the lazy dog</twig:Text>
            </div>
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-28 shrink-0">sm (14px)</span>
                <twig:Text size="sm">The quick brown fox jumps over the lazy dog</twig:Text>
            </div>
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-28 shrink-0">base (16px)</span>
                <twig:Text size="base">The quick brown fox jumps over the lazy dog</twig:Text>
            </div>
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-28 shrink-0">lg (18px)</span>
                <twig:Text size="lg">The quick brown fox jumps over the lazy dog</twig:Text>
            </div>
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-28 shrink-0">xl (20px)</span>
                <twig:Text size="xl">The quick brown fox jumps over the lazy dog</twig:Text>
            </div>
        </div>

        <div class="mt-3">
            <details class="text-sm">
                <summary class="cursor-pointer text-text-muted hover:text-text-secondary">Code Twig</summary>
                <pre class="mt-2 p-4 bg-surface-alt rounded-lg text-xs overflow-x-auto"><code>&lt;twig:Text&gt;Default primary text&lt;/twig:Text&gt;
&lt;twig:Text variant="secondary"&gt;Secondary text&lt;/twig:Text&gt;
&lt;twig:Text variant="muted" size="sm"&gt;Small muted text&lt;/twig:Text&gt;
&lt;twig:Text variant="danger"&gt;Error message&lt;/twig:Text&gt;</code></pre>
            </details>
        </div>
    </section>

    {# Inline Elements #}
    <section>
        <h2 class="text-lg font-semibold text-text-primary mb-4 pb-2 border-b border-border">Inline Elements</h2>
        <div class="space-y-4 text-text-primary">
            <p>This is a paragraph with an embedded <twig:Link href="#">hyperlink</twig:Link>.</p>
            <p>This is <twig:Code>inline code</twig:Code> in a paragraph.</p>
            <p>This is <strong>bold</strong> and <em>italic</em> text.</p>
            <p>This is text with a <twig:Mark>highlight</twig:Mark>.</p>
            <p>This is <small class="text-xs text-text-muted">smaller (small)</small> text.</p>
        </div>

        <div class="mt-3">
            <details class="text-sm">
                <summary class="cursor-pointer text-text-muted hover:text-text-secondary">Code Twig</summary>
                <pre class="mt-2 p-4 bg-surface-alt rounded-lg text-xs overflow-x-auto"><code>&lt;twig:Link href="/url"&gt;Click here&lt;/twig:Link&gt;
&lt;twig:Code&gt;some_function()&lt;/twig:Code&gt;
&lt;twig:Mark&gt;highlighted text&lt;/twig:Mark&gt;</code></pre>
            </details>
        </div>
    </section>

    {# Font Weights #}
    <section>
        <h2 class="text-lg font-semibold text-text-primary mb-4 pb-2 border-b border-border">Font Weights</h2>
        <div class="space-y-3">
            {% set weights = [
                {class: 'font-thin', label: 'font-thin', value: '100'},
                {class: 'font-extralight', label: 'font-extralight', value: '200'},
                {class: 'font-light', label: 'font-light', value: '300'},
                {class: 'font-normal', label: 'font-normal', value: '400'},
                {class: 'font-medium', label: 'font-medium', value: '500'},
                {class: 'font-semibold', label: 'font-semibold', value: '600'},
                {class: 'font-bold', label: 'font-bold', value: '700'},
                {class: 'font-extrabold', label: 'font-extrabold', value: '800'},
                {class: 'font-black', label: 'font-black', value: '900'},
            ] %}
            {% for weight in weights %}
            <div class="flex items-baseline gap-4">
                <span class="text-xs text-text-muted w-36 shrink-0">{{ weight.label }} ({{ weight.value }})</span>
                <span class="text-lg {{ weight.class }} text-text-primary">The quick brown fox jumps over the lazy dog</span>
            </div>
            {% endfor %}
        </div>
    </section>

    {# Lists #}
    <section>
        <h2 class="text-lg font-semibold text-text-primary mb-4 pb-2 border-b border-border">Lists</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
                <h3 class="text-sm font-medium text-text-muted mb-2">Bullet list</h3>
                <ul class="list-disc list-inside space-y-1 text-text-primary">
                    <li>First item</li>
                    <li>Second item</li>
                    <li>Third item</li>
                    <li>Fourth item</li>
                </ul>
            </div>
            <div>
                <h3 class="text-sm font-medium text-text-muted mb-2">Numbered list</h3>
                <ol class="list-decimal list-inside space-y-1 text-text-primary">
                    <li>First item</li>
                    <li>Second item</li>
                    <li>Third item</li>
                    <li>Fourth item</li>
                </ol>
            </div>
            <div>
                <h3 class="text-sm font-medium text-text-muted mb-2">Description list</h3>
                <dl class="space-y-2">
                    <div>
                        <dt class="font-medium text-text-primary">Term 1</dt>
                        <dd class="text-text-secondary text-sm">Definition of term 1</dd>
                    </div>
                    <div>
                        <dt class="font-medium text-text-primary">Term 2</dt>
                        <dd class="text-text-secondary text-sm">Definition of term 2</dd>
                    </div>
                </dl>
            </div>
        </div>
    </section>

</div>
{% endblock %}
