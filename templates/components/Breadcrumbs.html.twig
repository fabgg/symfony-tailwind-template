{% props items = [], variant = 'basic' %}

<nav {{ attributes.defaults({class: 'text-sm'}) }} aria-label="Breadcrumb">
    {% if variant == 'modern' %}
        <ol class="flex items-center gap-1">
            {% for item in items %}
                <li class="flex items-center gap-1">
                    {% if not loop.first %}
                        <svg class="w-4 h-4 text-text-muted shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M9 5l7 7-7 7"/></svg>
                    {% endif %}
                    {% if item.url is defined and item.url and not loop.last %}
                        <a href="{{ item.url }}" class="px-2.5 py-1 rounded-md text-text-secondary hover:text-primary-600 hover:bg-primary-50 dark:hover:bg-primary-950 transition-colors">{{ item.label }}</a>
                    {% else %}
                        <span class="px-2.5 py-1 rounded-md bg-surface-alt text-text-primary font-medium">{{ item.label }}</span>
                    {% endif %}
                </li>
            {% endfor %}
        </ol>
    {% else %}
        <ol class="flex items-center gap-2">
            {% for item in items %}
                <li class="flex items-center gap-2">
                    {% if not loop.first %}
                        <span class="text-text-muted">|</span>
                    {% endif %}
                    {% if item.url is defined and item.url and not loop.last %}
                        <a href="{{ item.url }}" class="text-text-secondary hover:text-primary-600 transition-colors">{{ item.label }}</a>
                    {% else %}
                        <span class="text-text-primary font-medium">{{ item.label }}</span>
                    {% endif %}
                </li>
            {% endfor %}
        </ol>
    {% endif %}
</nav>
